{
  "name": "terraform-cloud",
  "version": "0.0.0-development",
  "description": "Terraform Cloud API wrapper",
  "repository": {
    "type": "git",
    "url": "https://github.com/mijailr/terraform-cloud.git"
  },
  "author": "Mijail Rondon <mijail@hey.com>",
  "license": "MIT",
  "scripts": {
    "build": "pika pack",
    "test": "jest --coverage",
    "lint": "prettier --check '{src,test}/**/*.{js,json,ts}' README.md package.json",
    "lint:fix": "prettier --write '{src,test}/**/*.{js,json,ts}' README.md package.json",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": ">=4",
    "jest": "^26.3.0",
    "lint-staged": ">=10",
    "nock": "^13.0.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "axios": "^0.19.2"
  },
  "bugs": {
    "url": "https://github.com/mijailr/terraform-cloud/issues"
  },
  "homepage": "https://github.com/mijailr/terraform-cloud#readme",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "terraform",
    "api-client",
    "api-wrapper",
    "terraform-cloud"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,json}": "prettier --write"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
